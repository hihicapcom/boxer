<h1>知识库</h1>

<table width="100%">
  <tr>
    <th>编号</th>
    <th>标题</th>
    <th>创建人</th>
    <th>创建时间</th>
    <th>操作</th>
  </tr>

  <% @knowledges.each do |knowledge| %>
      <tr>
       <td><%= link_to "#("+knowledge.id.to_s+")", knowledge %></td>
        <td><%= h knowledge.title %></td>
        <td><%= h User.find(knowledge.user_id).realname %></td>
        <td><%= h knowledge.created_at.strftime('%Y年%m月%d日%H:%M:%S') %>
        <td><%= link_to '编辑', edit_knowledge_path(knowledge) %>
        <%= link_to '删除', knowledge, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>

<br/>

