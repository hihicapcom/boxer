<h1>编辑模块</h1>

<% form_for(@unit) do |f| %>
  <%= f.error_messages %>

  <p>
    模块名称<br />
    <%= f.text_field :name %>
  </p>
  <p>
    模块描述<br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit '更新' %>
  </p>
<% end %>

<%= link_to '显示', @unit %> |
<%= link_to '返回模块列表', units_path %>